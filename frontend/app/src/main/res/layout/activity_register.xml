<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3AAFA9"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="app.com.titus.communityapp.activitiy.authentication.RegisterActivity"
    tools:layout_editor_absoluteY="81dp">


    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="369dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_personp"
            android:hint="Username" />

        <EditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_security_black_24dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonstyleblue"
            android:text="Register"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>
